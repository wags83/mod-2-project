<%= form_for @investment do |f| %>
  <%= f.label :symbol %>
  <%= f.text_field :symbol %><br>

  <%= f.label :purchase_price %>
  <%= f.number_field :purchase_price %><br>

  <%= f.label :current_price %>
  <%= f.number_field :current_price %><br>

  <%= f.label :purchase_date %>
  <%= f.text_field :purchase_date %><br>

  <%= f.label :portfolio_id %>
  <%= f.text_field :portfolio_id %><br>

  <%= f.label :num_shares %>
  <%= f.text_field :num_shares %><br>

  <%=  f.submit "Sell Investment" %>

  <% end %>