<table>
  <tr><h3>
    <th>Portfolio ID</th>
    <th>Name</th>
    <th>Initial Cash</th>
    <th>Current Cash</th>
    <th>User ID</th>
    <th>Value</th>
    <th>P&L</th>
    <th>P&L %</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>
    <hr>
    <tr>
        <td><%= @portfolio.id %></td>
        <td><%= @portfolio.portfolio_name %></td>
        <td><%= @portfolio.initial_cash.round(0) %></td>
        <td><%= @portfolio.current_cash.round(0) %></td>
        <td><%= @portfolio.user_id %></td>
        <td><%= @portfolio.portfolio_value.round(0) %></td>
        <td><%= @portfolio.portfolio_pl.round(0) %></td>
        <td><%= @portfolio.portfolio_pl_ratio.round(0) %></td>
        <td><%= @portfolio.created_at %></td>
        <td><%= @portfolio.updated_at %></td> 
        </tr>

  <table>
  <h4><tr>
    <th>Investment ID</th>
    <th>Symbol</th>
    <th>Purchase Price</th>
    <th>Current Price</th>
    <th>Purchase Date</th>
    <th>Number of Shares</th>
    <th>Value</th>
    <th>P&L</th>
    <th>P&L %</th>
    <th>Portfolio ID</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>
    
    <% @portfolio.investments.each do |i| %>
    <tr>
        <td><%=link_to i.id, portfolio_investment_path(@portfolio, i.id) %></td>
        <td><%= i.symbol %></td>
        <td><%= i.purchase_price %></td>
        <td><%= i.current_price %></td>
        <td><%= i.purchase_date %></td>
        <td><%= i.num_shares %></td>
        <td><%= i.investment_value.round(0) %></td>
        <td><%= i.investment_pl.round(0) %></td>
        <td><%= i.investment_pl_ratio.round(0) %></td>
        <td><%= i.portfolio_id %></td>
        <td><%= i.created_at %></td>
        <td><%= i.updated_at %></td> 
        <td><%= button_to "Sell Investment #{i.symbol}", edit_portfolio_investment_path(@portfolio, i), method: :get %></td>
    </tr></h4>
    <% end %>
    </table>
    <%= button_to 'Buy Investment', new_portfolio_investment_path(@portfolio), method: :get %>
    

<h3>Comments:<br></h3>
<% @portfolio.comments.each do |comment|%>
Username: <%= link_to User.all.find(comment.user_id).username, User.all.find(comment.user_id) %><br>
Title: <%= comment.title %><br>
Content: <%= comment.content %><br>
<%= button_to 'Delete Comment', comment, method: :delete %>
<%= link_to 'Edit Comment', "/comments/#{comment.id}/edit"%>
<% end %>

<h3>Add a Comment:<br></h3>
<%= form_tag  '/comments/create' do %>

  <label>Title:</label>
  <%= text_field_tag :title %><br>

  <label>Content:</label>
  <%= text_area_tag :content %><br>

  <%= hidden_field_tag(:user_id, current_user.id) %><br>

  <%= hidden_field_tag(:portfolio_id, @portfolio.id) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag "Create" %>
  <% end %>

<%= button_to 'Delete Portfolio', @portfolio, method: :delete %>