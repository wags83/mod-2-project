<h1>Portfolios Index Page </h1>
<h2>Portfolios are cool bro.  Here are some sweet Portfolios:<h2>
<h3>
<table>
  <tr><h3>
    <th>Portfolio ID</th>
    <th>Name</th>
    <th>Initial Cash</th>
    <th>Current Cash</th>
    <th>User ID</th>
    <th>Value</th>
    <th>P&L</th>
    <th>P&L %</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>
    
    <% @portfolios.each do |p| %>
    <hr>
    <tr>
        <td><%= link_to p.id, p %></td>
        <td><%= "#{p.portfolio_name}" %></td>
        <td><%= "#{p.initial_cash}" %></td>
        <td><%= "#{p.current_cash}" %></td>
        <td><%= "#{p.user_id}" %></td>
        <td><%= "#{p.portfolio_value.round(0)}" %></td>
        <td><%= "#{p.portfolio_pl.round(0)}" %></td>
        <td><%= "#{p.portfolio_pl_ratio.round(0)}" %></td>
        <td><%= "#{p.created_at}" %></td>
        <td><%= "#{p.updated_at}" %></td> 
        </tr>
  <table>
  <h4><tr>
    <th>Investment ID</th>
    <th>Symbol</th>
    <th>Purchase Price</th>
    <th>Current Price</th>
    <th>Purchase Date</th>
    <th>Number of Shares</th>
    <th>Value</th>
    <th>P&L</th>
    <th>P&L %</th>
    <th>Portfolio ID</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>
    
    <% p.investments.each do |i| %>
    <tr>
        <td><%= link_to i.id, portfolio_investment_path(p.id, i.id) %></td>
        <td><%= "#{i.symbol}" %></td>
        <td><%= "#{i.purchase_price}" %></td>
        <td><%= "#{i.current_price}" %></td>
        <td><%= "#{i.purchase_date}" %></td>
        <td><%= "#{i.num_shares}" %></td>
        <td><%= "#{i.investment_value.round(1)}" %></td>
        <td><%= "#{i.investment_pl.round(1)}" %></td>
        <td><%= "#{i.investment_pl_ratio.round(1)}" %></td>
        <td><%= "#{i.portfolio_id}" %></td>
        <td><%= "#{i.created_at}" %></td>
        <td><%= "#{i.updated_at}" %></td> 
    </tr></h4>
    <% end %>
    </table>
    
    <% end %>

</h3></table>


