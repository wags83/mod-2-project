<%= flash[:error] if flash[:error] %>

<%= form_for @comment  do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>

<%= f.label :content %>
<%= f.text_field :content %><br>

<%= f.hidden_field :user_id %><br>

<%= f.hidden_field :portfolio_id %><br>

<%= f.submit "Edit Comment" %>
<% end %>