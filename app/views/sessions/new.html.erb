<h1>Login</h1>

<%= flash[:notice] if flash[:notice] %>
<!-- form will POST to '/login' -->
<%= form_tag(login_path) do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %><br>

  <%= label_tag :password %>
  <%= password_field_tag :password %><br>

  <%= submit_tag 'Login' %><br>
<% end %>
OR
<%= button_to "CREATE NEW ACCOUNT", new_user_path, method: :get %>