
<% @users.each do |user| %>
<table class="table table-dark">
  <tr>
    <th>Name</th>
    <th>Initial Cash</th>
    <th>Current Cash</th>
    <th>Value</th>
    <th>P&L</th>
    <th>P&L %</th>
  </tr>
<h2><%= link_to user.username, user %><br></h2>
    <% user.portfolios.each do |p| %>
    <tr>
        <td><%= link_to p.portfolio_name, p %></td>
        <td><%= number_to_currency(p.initial_cash.round(2))%></td>
        <td><%= number_to_currency(p.current_cash.round(2)) %></td>
        <td><%= number_to_currency(p.portfolio_value.round(2)) %></td>
        <td><%= number_to_currency(p.portfolio_pl.round(2)) %></td>
        <td><%= "#{p.portfolio_pl_ratio.round(2)}%" %></td>
        </tr>
<% end %>
<% end %>
 </table>

